<div id="page-title">
  <h1 class="page-header text-overflow"><%= meetingseries.title %></h1>
</div>

<ol class="breadcrumb">
  <li><a href="/dashboard">Dashboard</a></li>
  <li class="active">Meetingserie</li>
</ol>

<div id="page-content">
  <div class="row">
    <div class="col-xs-9">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-control">
            <button id="demo-panel-network-refresh" data-toggle="panel-overlay" data-target="#demo-panel-network"
                    class="btn">
              <i class="fa fa-rotate-right"></i>
            </button>
            <div class="btn-group">
              <button class="dropdown-toggle btn" data-toggle="dropdown" aria-expanded="false"><i
                  class="fa fa-gear"></i></button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li><a href="#">Separated link</a></li>
              </ul>
            </div>
          </div>
          <h3 class="panel-title">Information</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12">
              <%= meetingseries.description %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <div class="row">
                <div class="col-xs-6">
                  <div class="pad-ver media">
                    <div class="media-left">
	                                        <span class="icon-wrap icon-wrap-xs icon-circle bg-success">
					                			<i class="fa fa-user fa-2x"></i>
					                		</span>
                    </div>
                    <div class="media-body">
                      <p class="h3 text-thin media-heading">Administrators: <%= meetingseries.admins.length %></p>
                    </div>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="pad-ver media">
                    <div class="media-left">
	                                        <span class="icon-wrap icon-wrap-xs icon-circle bg-success">
					                			<i class="fa fa-user fa-2x"></i>
					                		</span>
                    </div>
                    <div class="media-body">
                      <p class="h3 text-thin media-heading">Members: <%= meetingseries.members.length %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xs-6 col-lg-6">
              <ul class="list-group bg-trans mar-no">
                <li class="list-group-item">
                  <span class="badge badge-success">2</span>
                  Meetings
                </li>
                <li class="list-group-item">
                  <span class="badge badge-success"><%= meetingseries.url %></span>
                  URL
                </li>
                <li class="list-group-item">
                  <span class="badge badge-success"><%= meetingseries.timer %></span>
                  Timer
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-lg-7">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Meetings</h3>
        </div>
        <div class="panel-body">
          <table class="table table-hover table-vcenter">
            <thead>
            <tr>
              <th class="min-width">Id</th>
              <th>Date</th>
              <th class="text-center">Summary</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td class="text-center">
                <span class="icon-wrap icon-wrap-sm icon-circle bg-success">1</span>
              </td>
              <td>
                <span class="text-muted"><i class="fa fa-clock-o"></i>12.12.12</span>
              </td>
              <td class="text-center">
                <button><i class="fa fa-download"></i></button>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-lg-5">
      <div id="topics-panel">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">Topics</h3>
          </div>
          <div class="panel-body">
            <% meetingseries.topics = [{title: "TestTopic"}, {title: "TestTopic2"}] %>
            <ul class="list-group bg-trans">
              <li class="list-group-item active" data-title="<%= meetingseries.topics[0].title %>"
                  data-description="<%= meetingseries.topics[0].description %>">
                <%= meetingseries.topics[0].title %>
              </li>
              <% _.each(meetingseries.topics, function (topic) { %>
              <li class="list-group-item" data-title="<%= topic.title %>" data-description="<%= topic.description %>">
                <%= topic.title %>
              </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#newMeetingModal">New meeting
  </button>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="newTopicModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal"><span>×</span></button>
        <h4 class="modal-title">New Topic</h4>
      </div>
      <div class="modal-body">
        <input type="text" class="id-input form-control" value="<%= meetingseries.id %>" style="display: none;">
        <div class="form-group">
          <label class="col-md-3 control-label">Topic title</label>
          <div class="col-md-9">
            <input class="title-input" type="text" class="form-control" placeholder="Title"/>
            <small class="help-block">Please enter a the topic title</small>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Description</label>
          <div class="col-md-9">
            <textarea class="description-textarea" rows="9" class="form-control" placeholder="Description"></textarea>
            <small class="help-block">Please enter a the description</small>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="newTopicModalSubmit">Create new</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="updateTopicModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal"><span>×</span></button>
        <h4 class="modal-title">Update Topic</h4>
      </div>
      <div class="modal-body">
        <input type="text" class="id-input form-control" value="<%= meetingseries.id %>" style="display: none;">
        <div class="form-group">
          <label class="col-md-3 control-label">Topic title</label>
          <div class="col-md-9">
            <input class="title-input" type="text" class="form-control" placeholder="Title"/>
            <small class="help-block">Please enter a the topic title</small>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Description</label>
          <div class="col-md-9">
            <textarea class="description-textarea" rows="9" class="form-control" placeholder="Description"></textarea>
            <small class="help-block">Please enter a the description</small>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="updateTopicModalSubmit">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="newMeetingModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal"><span>×</span></button>
        <h4 class="modal-title">New meeting</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label class="col-md-3 control-label" for="meeting-title-input">Meeting title</label>
          <div class="col-md-9">
            <input type="text" id="meeting-title-input" class="form-control" placeholder="Title"/>
            <small class="help-block">Please enter a the meeting title</small>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label" for="meeting-description-textarea">Description</label>
          <div class="col-md-9">
            <textarea id="meeting-description-textarea" rows="9" class="form-control"
                      placeholder="Description"></textarea>
            <small class="help-block">Please enter a the description</small>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Topics</label>
          <div id="meeting-topics" class="col-md-9">
            <div class="row">
              <div class="col-xs-6">
                <ul id="selected-topics" class="list-group topics-list">
                </ul>
              </div>
              <div class="col-xs-6">
                <ul id="all-topics" class="list-group topics-list">
                  <% _.each(meetingseries.topics, function (topic) { %>
                  <li class="list-group-item"><%= topic.title %></li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group pad-ver">
          <label class="col-md-3 control-label">Invite</label>
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-6 pad-no form-block">
                <% _.each(meetingseries.admins, function (admin) { %>
                <div class="checkbox">
                  <label class="form-checkbox form-normal form-info">
                    <input type="checkbox"><%= admin.name %>
                  </label>
                </div>
                <% }) %>

              </div>
              <div class="col-md-6 pad-no form-block">
                <% _.each(meetingseries.members, function (member) { %>
                <div class="checkbox">
                  <label class="form-checkbox form-normal form-info">
                    <input type="checkbox"><%= member.name %>
                  </label>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>

        <hr/>
        <br/>
        <br/>

        <p class="text-thin mar-btm">Date</p>
        <div>
          <div class="input-group date">
            <input id="meeting-date-input" type="text" class="form-control">
            <span class="input-group-addon"><i class="fa fa-calendar fa-lg"></i></span>
          </div>
          <small class="text-muted">Auto close on select</small>
        </div>

        <br/>

        <p class="text-thin mar-btm">Timer</p>
        <div class="input-group date">
          <input id="meeting-timer-input" type="text" class="form-control"/>
          <span class="input-group-addon"><i class="fa fa-clock-o fa-lg"></i></span>
        </div>

        <br/>

        <p class="text-thin mar-btm">URL</p>
        <div class="input-group date">
          <input id="meeting-url-input" type="text" class="form-control"/>
          <span class="input-group-addon"><i class="fa fa-globe-o fa-lg"></i></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="newMeetingModalSubmit">Create new</button>
      </div>
    </div>
  </div>
</div>
