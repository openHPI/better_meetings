<div class="container">
  <div class="login-container">
    <h2>Bitte geben Sie ihre E-Mail Adresse ein</h2>
    <form id="login-form" class="form-horizontal" role="form" action="/login" method="post">
      <div class="form-group">
        <label class="control-label col-sm-2" for="email">E-Mail:</label>
        <div class="col-sm-10">
          <input name="email" type="email" class="form-control" id="email" placeholder="max@muster.de">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label><input type="checkbox"> Angemeldet bleiben</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Anmelden</button>
        </div>
      </div>
    </form>
  </div>
</div>
